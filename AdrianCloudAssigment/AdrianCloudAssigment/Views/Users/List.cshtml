@model IEnumerable<Common.File>

@{
    ViewData["Title"] = "List";
}

<h1>List Your Upload Files</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>

                @if (!string.IsNullOrEmpty(item.ConvertedFileLink)) {
                    <a href="@item.ConvertedFileLink"> Download Converted File</a>
                }
                <a href="@item.FileLink">Download Document</a>

                <input type="button" value="Convert" onclick="location.href='@Url.Action( "ConvertToPDF", "Users",new { fileId =  item.Id} )'" />
             
            </td>
        </tr>
}
    </tbody>
</table>
